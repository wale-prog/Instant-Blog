<h1>Create a new post</h1>

<% if @article.errors.any? %>
  <h4>The following errors are prevented the post from being saved</h4>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Post, url: user_posts_path do |f| %>
  <%= f.hidden_field :comments_counter, value:0 %>
  <%= f.hidden_field :likes_counter, value: 0 %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :text %><br/>
  <%= f.text_area :text %><br/>
  <%= f.submit "Submit post"%>
<% end %>