<div style='display:flex;flex-direction:column;gap:24px;justify-content:center'>
  <% @users.each do |item| %>
      <div style=display:flex;align-items:center;gap:16px>
        <img src=<%= item.photo %> style= width:100px;height:100px alt="profile photo">      
        <h2><%= link_to user_path(item) do %>
          <%= item.name %>
        <% end %></h2>
        <p>number of posts: <%= item.posts.count %></p>      
      </div>
  <% end %>
</div>
